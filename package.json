{
	"name": "seventv",
	"version": "0.0.0",
	"scripts": {
		"dev": "vite --mode dev",
		"build": "vue-tsc --noEmit && vite build",
		"serve": "vite preview",
		"lint:style": "stylelint \"**/*.{vue,scss,css}\" --ignore-path .gitignore",
		"lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
		"lint": "yarn lint:js && yarn lint:style",
		"postinstall": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
		"*.{css,vue,scss}": "stylelint \"**/*.{vue,scss,css}\" --ignore-path .gitignore"
	},
	"dependencies": {
		"@apollo/client": "^3.5.5",
		"@fortawesome/fontawesome-svg-core": "^1.2.36",
		"@fortawesome/free-brands-svg-icons": "^5.15.4",
		"@fortawesome/free-regular-svg-icons": "^5.15.4",
		"@fortawesome/free-solid-svg-icons": "^5.15.4",
		"@fortawesome/vue-fontawesome": "^3.0.0-5",
		"@popperjs/core": "^2.11.0",
		"@vue/apollo-composable": "^4.0.0-alpha.16",
		"@vueuse/head": "^0.7.2",
		"crypto-hash": "^2.0.0",
		"date-fns": "^2.27.0",
		"dompurify": "^2.3.3",
		"graphql": "^16.0.1",
		"marked": "^4.0.5",
		"set-value": "^4.1.0",
		"vue": "^3.2.23",
		"vue-cookie-next": "^1.3.0",
		"vue-i18n": "^9.2.0-beta.22",
		"vue-router": "^4.0.12",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@types/dompurify": "^2.3.1",
		"@types/node": "^16.11.11",
		"@types/set-value": "^4.0.1",
		"@types/zen-observable": "^0.8.3",
		"@typescript-eslint/eslint-plugin": "^5.5.0",
		"@typescript-eslint/parser": "^5.6.0",
		"@vitejs/plugin-vue": "^1.10.1",
		"@vue/eslint-config-prettier": "^6.0.0",
		"@vue/eslint-config-typescript": "^9.1.0",
		"eslint": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-vue": "^8.1.1",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.2",
		"postcss-html": "^1.3.0",
		"postcss-scss": "^4.0.2",
		"prettier": "^2.5.0",
		"rollup-plugin-visualizer": "^5.5.2",
		"sass": "^1.44.0",
		"stylelint": "^14.1.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-recommended-scss": "^5.0.2",
		"stylelint-config-recommended-vue": "^1.1.0",
		"stylelint-config-standard": "^24.0.0",
		"stylelint-scss": "^4.0.0",
		"stylelint-webpack-plugin": "^3.1.0",
		"typescript": "^4.5.2",
		"vite": "^2.6.14",
		"vue-tsc": "^0.29.8"
	}
}
