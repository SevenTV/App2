{
	"name": "seventv",
	"version": "0.0.0",
	"scripts": {
		"dev": "vite --mode dev",
		"build": "vue-tsc --noEmit && vite build",
		"serve": "vite preview",
		"lint:style": "stylelint \"**/*.{vue,scss,css}\" --ignore-path .gitignore",
		"lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
		"lint": "yarn lint:js && yarn lint:style",
		"postinstall": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
		"*.{css,vue,scss}": "stylelint \"**/*.{vue,scss,css}\" --ignore-path .gitignore"
	},
	"dependencies": {
		"@apollo/client": "^3.4.16",
		"@fortawesome/fontawesome-svg-core": "^1.2.36",
		"@fortawesome/free-brands-svg-icons": "^5.15.4",
		"@fortawesome/free-regular-svg-icons": "^5.15.4",
		"@fortawesome/free-solid-svg-icons": "^5.15.4",
		"@fortawesome/vue-fontawesome": "^3.0.0-4",
		"@vue/apollo-composable": "^4.0.0-alpha.15",
		"@vueuse/head": "^0.6.0",
		"crypto-hash": "^1.3.0",
		"graphql": "^15.6.1",
		"vue": "^3.2.16",
		"vue-router": "^4.0.11",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@types/node": "^16.11.1",
		"@typescript-eslint/eslint-plugin": "^4.29.3",
		"@typescript-eslint/parser": "^4.29.3",
		"@vitejs/plugin-vue": "^1.9.3",
		"@vue/eslint-config-prettier": "^6.0.0",
		"@vue/eslint-config-typescript": "^7.0.0",
		"eslint": "^6.7.2",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-vue": "^7.0.0",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.2",
		"prettier": "^2.4.1",
		"sass": "^1.42.1",
		"stylelint": "^13.13.1",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^22.0.0",
		"typescript": "^4.4.3",
		"vite": "^2.6.4",
		"vue-tsc": "^0.3.0"
	}
}
